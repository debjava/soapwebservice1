
<web-app>
    <description>headerwebservice</description>
    <display-name>headerwebservice</display-name>
    <listener>
        <listener-class>com.sun.xml.ws.transport.http.servlet.WSServletContextListener</listener-class>
    </listener>
    <servlet>
        <description>JAX-WS endpoint - ZodiacCalculatorService</description>
        <display-name>headerwebservice</display-name>
        <servlet-name>headerwebservice</servlet-name>
        <servlet-class>com.sun.xml.ws.transport.http.servlet.WSServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>headerwebservice</servlet-name>
        <url-pattern>/headerwebservice</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
</web-app>
